@import 'lib/_variables.styl'
@import 'lib/_colors.styl'
@import 'lib/_mixins.styl'

*
    box-sizing  border-box
    &::-webkit-scrollbar
        width 0px
        height 0px
        background-color white
        display none
        flexbox(ai:flex-start)
    &::-webkit-scrollbar-thumb
        // display none
        background-color darkGray
*, *:before, *:after
    box-sizing inherit
    position relative

*
    box-sizing border-box
    &:after, &:before
        box-sizing border-box

body
    padding 0
    margin 0

#app
    position relative
    height 100%
    background $gray